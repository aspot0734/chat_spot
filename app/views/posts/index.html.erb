<div class="back">
  <div class="descryption">
    <p>投稿一覧</p>
  </div>
  <div class="contents">
    <% @posts.each do |post| %>
      <div class="content">
        <img src="<%= "/user_images/#{post.user.image_name}" %>">
        <div class="texts">
          <div class="bold">
            <%= link_to(post.user.name, "/users/#{post.user.id}") %>
          </div>
          <%= link_to(post.content, "/posts/#{post.id}") %>
        </div>
      </div>
    <% end %>
  </div>
</div>
